{% extends 'base.html.twig' %}

{% block title %}{{setup.name}}{% endblock %}

{% block style %}

.card-img-top {
  display: block;
  height: 300px;
  object-fit: contain;
}

{% endblock %}

{% block main %}
<div class="main">
    <div class="container">
        <h3 class="mb-4">Setup {{ setup.name }}</h3>
        <div class="row">
            {% for equipment in equipments %}
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <a href="{{ path('equipment_show', {'id': equipment.id}) }}"><img class="card-img-top" src={{ asset('images/equipments/'~equipment.image) }} alt=""></a>
                    <div class="card-body">
                        <h4 class="card-title">
                        {{ equipment.name }}
                        </h4>
                    </div>
                </div>
            </div>
            {% else %}
                <tr>
                    <td colspan="6">Aucun résultat trouvé</td>
                </tr>
            {% endfor %}
        </div>

        <a href="{{ path('setup_index') }}">back to list</a>

        <a href="{{ path('setup_edit', {'id': setup.id}) }}">edit</a>

        {{ include('setup/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
